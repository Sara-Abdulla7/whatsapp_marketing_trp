<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_whatsapp_marketing_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.whatsapp.marketing</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="15"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Whatsapp Marketing Config" string="Whatsapp Marketing"
                         data-key="whatsapp_marketing">
                        <h2>Whatsapp Marketing Config</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Instance ID</span>
                                    <div class="text-muted">Please Enter Instance ID</div>
                                    <div class="o_row">
                                        <div class="mt8">
                                            <field name="instance_id" placeholder="Instance ID "/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Token</span>
                                    <div class="text-muted">Please Enter Token ID</div>
                                    <div class="o_row">
                                        <div class="mt8">
                                            <field name="token" placeholder="Token ID "/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>
        <record id="res_config_settings_view_whatsapp_marketing_action" model="ir.actions.act_window">
            <field name="name">Whatsapp Marketing Config</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_whatsapp_marketing_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'whatsapp_marketing'}</field>
        </record>


    </data>
</odoo>